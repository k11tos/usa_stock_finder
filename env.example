# USA Stock Finder Environment Variables
# 이 파일을 .env로 복사하고 실제 값으로 채워주세요
# cp env.example .env

# ============================================
# 필수 환경 변수 (Required)
# ============================================

# 한국투자증권 API
ki_app_key=your_api_key_here
ki_app_secret_key=your_secret_key_here
account_number=your_account_number_here

# 텔레그램 알림
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================
# 전략 파라미터 (Optional - 기본값 사용 가능)
# ============================================

# 52주 고가/저가 임계값
# HIGH_THRESHOLD_RATIO=0.75
# LOW_INCREASE_PERCENT=30.0

# 이동평균 기간
# MA_50_DAYS=50
# MA_150_DAYS=150
# MA_200_DAYS=200

# 상관관계 임계값
# CORRELATION_THRESHOLD_STRICT=50.0
# CORRELATION_THRESHOLD_RELAXED=40.0

# 비교 여유값
# MARGIN=0.0
# MARGIN_RELAXED=0.1

# 이동평균 증가 확인 기간
# MA_INCREASE_CHECK_DAYS=21

# 손절 기준 (평균 매수가 대비 손실률)
STOP_LOSS_PCT=0.10

# 손절 쿨다운 설정
# STOP_LOSS_COOLDOWN_BASE_DAYS=5
# STOP_LOSS_COOLDOWN_EXTRA_DAYS_PER_10PCT=5
# STOP_LOSS_COOLDOWN_MAX_DAYS=60

# 트레일링 스탑 설정
# TRAILING_ENABLED=True
# TRAILING_ATR_PERIOD=20
TRAILING_ATR_MULTIPLIER=3.0
# TRAILING_MIN_PROFIT_PCT=0.10

# ============================================
# 투자 파라미터 (Optional)
# ============================================

# 예비금 비율
# RESERVE_RATIO=0.1

# 최소/최대 투자 금액
# MIN_INVESTMENT=100.0
# MAX_INVESTMENT=0.0  # 0 = 제한 없음

# 투자 분배 전략: "equal" (균등 분배) 또는 "proportional" (비율 기반)
# DISTRIBUTION_STRATEGY=equal
# PROPORTIONAL_PERCENTAGE=0.0  # 0 = 균등 분배

# ============================================
# AVSL (Average Volume Support Level) 파라미터 (Optional)
# ============================================

# 레거시 파라미터
# AVSL_PERIOD_DAYS=50
# AVSL_VOLUME_DECLINE_THRESHOLD=0.5
# AVSL_PRICE_DECLINE_THRESHOLD=0.03
# AVSL_RECENT_DAYS=5

# Buff Dormeier AVSL 파라미터
# AVSL_BARS=26
# AVSL_STDDEV_MULT=2.0
# AVSL_MIN_LENGTH=3
# AVSL_MAX_LENGTH=50
# AVSL_FAST_PERIOD=5
# AVSL_SLOW_PERIOD=20
# AVSL_TIMEFRAME=1d

# ============================================
# 데이터 품질 파라미터 (Optional)
# ============================================

# 최소 데이터 포인트
# MIN_DATA_POINTS_MA_50=50
# MIN_DATA_POINTS_MA_150=150
# MIN_DATA_POINTS_MA_200=200
# MIN_DATA_POINTS_CORRELATION=200

# 최소 가격 임계값
# MIN_PRICE_THRESHOLD=0.01

# ============================================
# API 재시도 설정 (Optional)
# ============================================

# API_MAX_RETRIES=5
# API_RETRY_DELAY_SECONDS=1.0
